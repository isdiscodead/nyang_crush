<?xml version="1.0" encoding="UTF-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 데이터 바인딩 -->
    <data>
        <variable
            name="activity"
            type="com.pro.nyangcrush.MainActivity"/>
    </data>

    <LinearLayout android:orientation="vertical"
        android:background="@drawable/background"
        tools:context=".MainActivity" android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/white_box"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bell_fill"
                android:layout_marginTop="20dp"
                android:id="@+id/bell1"
                android:padding="3dp"
                android:layout_centerVertical="true" />


            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bell_fill"
                android:layout_marginTop="20dp"
                android:id="@+id/bell2"
                android:padding="3dp"
                android:layout_toRightOf="@+id/bell1"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bell_fill"
                android:layout_marginTop="20dp"
                android:id="@+id/bell3"
                android:padding="3dp"
                android:layout_toRightOf="@id/bell2"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bell_fill"
                android:layout_marginTop="20dp"
                android:id="@+id/bell4"
                android:padding="3dp"
                android:layout_toRightOf="@id/bell3"
                android:layout_centerVertical="true"

                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bell_fill"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:id="@+id/bell5"
                android:padding="3dp"
                android:layout_toRightOf="@id/bell4"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/bell_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bell5"
                android:paddingLeft="5dp"
                android:text="00:00"
                android:textSize="15dp"
                android:textColor="@color/brown"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <!-- 상단 버튼 메뉴 -->
            <Button android:layout_height="50dp"
                android:id="@+id/btn_help"
                android:layout_width="50dp"
                android:background="@drawable/btn_help" />

            <Button
                android:id="@+id/btn_set"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_setting" />

        </LinearLayout>

        </LinearLayout>

        <!-- 점수 / 랭크 확인 + 게임 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp"
                android:textSize="20dp"
                android:textColor="@color/brown"
                android:fontFamily="@font/black_han_sans"
                android:text="High Score"/>

            <TextView android:background="@drawable/btn_pink"
                android:layout_height="80dp"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#fff"
                android:fontFamily="@font/black_han_sans"
                android:text="점수 확인"
                android:gravity="center"/>

            <Button android:background="@drawable/btn_blue"
                android:id="@+id/btn_ranking"
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="#fff"
                android:fontFamily="@font/black_han_sans"
                android:text="랭크 확인"
                android:gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="100dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_game_start"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_yellow"
                android:fontFamily="@font/black_han_sans"
                android:gravity="center"
                android:text="GAME\nSTART"
                android:textColor="#fff"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:layout_weight="1"/>

    </LinearLayout>

</layout>
