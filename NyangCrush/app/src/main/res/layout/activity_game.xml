<?xml version="1.0" encoding="UTF-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 데이터 바인딩 -->
    <data>
        <variable
            name="activity"
            type="com.pro.nyangcrush.GameActivity"/>
    </data>

    <!-- 전체 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/creamYellow"
        tools:context=".GameActivity">

        <!-- 일시정지 버튼  레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <!-- 일시정지 버튼 -->
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_pause"
                android:id="@+id/btn_pause"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <!-- 최고 점수 & 현재 점수 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 최고 점수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:text="High Sco | "
                    android:fontFamily="@font/black_han_sans"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000"
                    android:textSize="25dp"
                    android:fontFamily="@font/black_han_sans"
                    android:textColor="@color/brown"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/highScore"/>

            </LinearLayout>

            <!-- 현재 점수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="12dp"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:text="Now Sco |"
                    android:fontFamily="@font/black_han_sans"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25dp"
                    android:fontFamily="@font/black_han_sans"
                    android:textColor="@color/brown"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/nowScore"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 시간, 콤보 표시 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 시간, 콤보 -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_han_sans"
                    android:text="TIME"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="-15dp"
                    android:textColor="#6E5C5C"
                    android:textSize="30dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#6E5C5C"
                    android:textSize="30dp"
                    android:text="COMBO"
                    android:fontFamily="@font/black_han_sans"
                    android:layout_marginLeft="110dp"/>

            </LinearLayout>

            <!-- 시간, 콤보 표시박스 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@drawable/white_box"
                    android:fontFamily="@font/black_han_sans"
                    android:textColor="@color/pink"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/time"/>

                <TextView
                    android:layout_height="35dp"
                    android:layout_width="90dp"
                    android:textColor="@color/pink"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:background="@drawable/white_box"
                    android:fontFamily="@font/black_han_sans"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/count"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 게임 시작 메시지 -->
        <ImageView
            android:id="@+id/gameStartMessage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/game_start_mess"
            android:visibility="gone"/>

        <!-- 게임 판 레이아웃 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <!-- 동일한 블럭 3개 이상일때 삭제되는
                 블록들을 채우기 위해 새로 나오는 블록 바 -->
            <TextView
                android:id="@+id/game_hide_Nyang_bar"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 게임판 -->
            <TextView
                android:id="@+id/game_plate"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/game_hide_Nyang_bar"
                android:background="@color/richWhite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout> <!-- 전체 레이아웃 -->

</layout>